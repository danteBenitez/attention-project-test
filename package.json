{
  "name": "attention-project",
  "version": "1.0.0",
  "description": "A web application that provides help to people who find it hard to mantain focus, with differentes functionalities",
  "main": "./dist/src/app.js",
  "scripts": {
    "test": "cross-env-shell NODE_ENV=test \"jest\"",
    "test:seq": "cross-env-shell NODE_ENV=test \"jest --runInBand\"",
    "watch": "tsc-watch --onSuccess \"node ./dist/src/app.js\"",
    "dev": "cross-env-shell NODE_ENV=development \"npm run watch\"",
    "build": "npm install && npx tsc",
    "start": "cross-env-shell NODE_ENV=production \"node ./dist/src/app.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tlp1-attention/attention-project.git"
  },
  "keywords": [
    "attention",
    "reading-game",
    "memory"
  ],
  "author": "Attention Org.",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tlp1-attention/attention-project/issues"
  },
  "homepage": "https://github.com/tlp1-attention/attention-project#readme",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/connect-sqlite3": "^0.9.2",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.2.5",
    "@types/passport": "^1.0.12",
    "@types/passport-local": "^1.0.35",
    "@types/web-push": "^3.3.2",
    "babel-jest": "^29.5.0",
    "cross-env": "^7.0.3",
    "jest": "^29.5.0",
    "sequelize-auto": "^0.8.8",
    "tsc-watch": "^6.0.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.3"
  },
